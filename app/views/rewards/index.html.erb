<%=render partial: "users/user-nav-bar" %>
  <div class="container">
  <h1>Available Rewards:</h1>

  <% @rewards.each do |reward| %>
    <div class="boxed">
      <h3><%=reward.name%></h3>
      <p><%=reward.description%></p>
      <p><%=reward.price%> points</p>
      <p><%= link_to "Purchase", edit_reward_path(reward)%></p>
    </div>
    <% end %>
</div>