<%=render partial: "user-nav-bar" %>
<div class="container">
  <div class="boxed">
    <h1>Welcome <%=@user.username%></h1>
      <p>Points available: <%=@user.available_points%></p>
      <p>Points spent: <%=@user.spent_points%></p>
  </div>

	<div class="items">
  <h1>Rewards: </h1>
    <%@user.rewards.each do |reward| %>
      <div class="boxed">
        <h3><%=reward.name%></h3>
        <p><%=reward.description%></p>
      </div>
    <%end%>
	</div>		
</div>


